<% provide(:title, "Items" ) %>
<div class="page-header">
	<h1>Items<small>#index</small></h1>
</div>
	<div class="tabbable tabs-left"> <!-- Only required for left/right tabs -->
    	<ul class="nav nav-tabs">
    		<li class="active"><a href="#tab1" data-toggle="tab">Cards</a></li>
    		<li><a href="#tab2" data-toggle="tab">Armor</a></li>
    		<li><a href="#tab3" data-toggle="tab">All Items</a></li>
    	</ul>
    	<div class="tab-content">
    		<div class="tab-pane active" id="tab1">
    			<table class="table table-hover table-bordered">
    				<tr>
    					<th>Cards</th>    		
    				</tr>
    				<% @card.each do |card| %>
    				<tr>
    					<td><%= link_to card, card %></td>
      				<% end %>
      				</tr>
    			</table>
    		</div>
    		<div class="tab-pane" id="tab2">
    			<table class="table table-hover table-bordered">
    				<tr>
    					<th>Armor</th>
    					<th>Def</th>
    				</tr>
    				<% @armor.each do |armor| %>
    				<tr>
    					<% if armor.slots != 0 %>
    					<td><%= link_to("#{armor}[#{armor.slots}]", armor) %></td>
    					<% else %>
    					<td><%= link_to armor, armor %></td>
    					<% end %>
    					<td><%= armor.def %></td>
      				<% end %>
      				</tr>
    			</table> 
    		</div>
    		<div class="tab-pane" id="tab3">
    			<table class="table table-hover table-bordered">
    				<tr>
    					<th>Item</th>
    				</tr>
    				<% @items.each do |item| %>
    				<tr>
    					<td><%= link_to item, item %></td>
      				<% end %>
      				</tr>
    			</table> 
    		</div>
    	</div>
    </div>