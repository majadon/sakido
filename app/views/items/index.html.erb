<% provide(:title, "Items" ) %>
<div class="page-header">
	<h1>Items<small>#index</small></h1>
</div>
<div class="pull-right">
    <%= form_tag({:controller => "items", :action => "index"}, :method => "get", :class => "form-search") do |f| %>
    <%= label_tag(:name, "Search for:") %>
    <%= text_field_tag(:name, params[:name], :placeholder => "Name") %>
    <%= submit_tag("Search", :class => "btn btn-primary") %>
    <%= link_to "clear filter", items_path %>  
    <% end %>
</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Items</th>
        </tr>
    </thead>
    <tbody>
        <% @items.each do |item| %>
        <tr>
            <td><%= link_to item, item %></td>
        </tr>
        <% end %>
    </tbody>
</table>