<% provide(:title, "Maps" ) %>
<div class="page-header">
	<h1>Maps<small>#index</small></h1>
</div>
<div class="center">
    <%= form_tag({:controller => "maps", :action => "index"}, :method => "get", :class => "form-search") do |f| %>
    <%= label_tag(:name, "Search for:") %>
    <%= text_field_tag(:name, params[:name], :placeholder => "Name") %>
    <%= submit_tag("Search", :class => "btn btn-primary") %>
    <%= link_to "clear filter", maps_path %>  
    <% end %>
</div>

<div class="pull-right"><%= page_entries_info @monsters %></div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Maps</th>
        </tr>
    </thead>
    <tbody>
        <% @maps.each do |map| %>
        <tr>
            <td><%= link_to map, map %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<div class="pagination center"><%= will_paginate @monsters %></div>