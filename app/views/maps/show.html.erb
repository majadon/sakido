<% provide(:title, "Map: " + @map.map_id ) %>
<div class="page-header">
	<h1>Maps<small>#show</small></h1>
</div>
<div class="row-fluid center">
	<div class="span4">
		<h2><%= @map.map_id %></h2>
		<%= image_tag("maps/#{@map.map_id}.bmp") %>
	</div>
	<div class="span8">
		<h2>Monster</h2>
		<table class="table table-hover">
			<thead>
				<tr>
					<th>Name:</th>
					<th>Lv:</th>
					<th>Amount:</th>
					<th>Delay:</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<% @map.monsters.order("amount DESC").each do |monster| %>
					<%= render monster %>
					<% end %>
				</tr>
			</tbody>
		</table>
	</div>
</div>