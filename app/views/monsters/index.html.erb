<% provide(:title, "Monster" ) %>
<div class="page-header">
    <h1>Monsters<small>#index</small></h1>
</div>
    <table class="table table-hover table-bordered">
    	<tr>
    		<th>Monster</th>
    		<th>Lv</th>
    		<th>EXP</th>
    		<th>Job EXP</th>
    	</tr>
    	<% @monsters.each do |monster| %>
    	<tr>
    		<td><%= link_to monster, monster %></td>
      		<td><%= monster.lv %>
      		<td><%= monster.exp %>
      		<td><%= monster.jexp %>
      		<% end %>
      	</tr>
    </table> 
